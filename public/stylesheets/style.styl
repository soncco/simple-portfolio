@import 'normalize'
@import 'nib'
@import url('http://fonts.googleapis.com/css?family=Noto+Sans');
@import url('//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css');

global-normalize()

the-font = 'Noto Sans', sans-serif
the-color = #cdcaca

body
  background #000
  color #413f3f
  image: '../images/subtle_orange_emboss.png'
  font 14px/1.5em Arial, sans-serif

h1, h2, h3
  color #000
  font-family the-font
  margin-bottom 10px

a
  color #000
  font-weight bold
  text-decoration none

  &:hover
    color #005580

#main
  background #fff
  border 1px solid the-color
  border-radius 5px
  border-width 0 1px 1px 0
  box-shadow 2px 2px 10px the-color
  margin 30px auto
  padding 5px 20px
  width 60%

#header
  border-bottom 1px solid the-color
  position relative

  h1
    font-size 40px
  p
    font-size 11px
    margin-bottom 2px

#social
  position absolute
  top 0
  right 0

  ul
    margin 0
  li
    list-style-type none
    margin 0 5px
    padding 0
    float left

#content
  border-bottom 1px solid the-color
  &>ul
    padding-left 10px
  li ul
    margin-top 0
    padding-top 0
  &>ul>li
    list-style-type none
    padding-left 0

#footer
  color #555
  font-size 11px
  text-align right

@import 'mq.styl'


